<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <gradient android:angle="270" android:endColor="#E0E0E0" android:startColor="#EEEEEE" />

        <corners android:radius="10dp" />

        <padding
            android:bottom="7dp"
            android:left="7dp"
            android:right="7dp"
            android:top="7dp" />

        <stroke android:width="2dp" android:color="#212121" />
    </shape>
</item>
</selector>